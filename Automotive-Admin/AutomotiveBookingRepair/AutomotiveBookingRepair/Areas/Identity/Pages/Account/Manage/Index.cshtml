@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.CustomerFullName"></label>
                <input asp-for="Input.CustomerFullName" class="form-control" />
                <span asp-validation-for="Input.CustomerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CustomerAge"></label>
                <input asp-for="Input.CustomerAge" class="form-control" />
                <span asp-validation-for="Input.CustomerAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CustomerDOB"></label>
                <textarea asp-for="Input.CustomerDOB" class="form-control"> </textarea>
                <span asp-validation-for="Input.CustomerDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CustomerAddress"></label>
                <input asp-for="Input.CustomerAddress" class="form-control" /> 
                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}